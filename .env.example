# NoteLooms Environment Variables
# Copy this file to Backend/.env and fill in your values

# REQUIRED - Google Gemini API Key
# Get from: https://ai.google.dev/
GOOGLE_API_KEY=your-gemini-api-key-here

# OPTIONAL - Separate chat API key (defaults to GOOGLE_API_KEY)
GEMINI_CHAT_API_KEY=

# OPTIONAL - YouTube API Key (for enhanced transcript support)
YOUTUBE_API_KEY=

# OPTIONAL - Flask Debug Mode (set to 0 in production)
FLASK_DEBUG=0

# OPTIONAL - Flask Environment
FLASK_ENV=production

# OPTIONAL - Port (default: 5000)
FLASK_PORT=5000
